<div class="container">
  <img src="/assets/img/burger.jpg" width="300px" class="img-center">

  <h1>Eat-Da-Burger</h1>

  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="https://placekitten.com/260/175">
          <span class="card-title">
            <h3>Lonely Burgers</h3>
            {{#each burger_name}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
          </span>
        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="https://placekitten.com/260/175">
          <span class="card-title">
            <h3>Demolished Burgers</h3>
            {{#each burger_name}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
          </span>
        </div>
      </div>
    </div>

<form class="create-form">
  <div class="form-group">
    <label for="burger">Add a Burger:</label>
    <input type="text" id="burger" name="name">
    <button class="btn btn-primary" type="submit">More Burger!</button>
  </div>
</form>

</div>