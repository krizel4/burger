<div class="container">
  <img src="/assets/img/burger.jpg" width="300px" class="img-center">

  <h2 style="text-align: center;">Eat-Da-Burger</h2>

  <div class="row">
    <div class="col s12 m6">
      <div class="card lonely-card">
        <div class="card-image">
          <img src="/assets/img/uneaten_burger.png">

          <h3>Lonely Burgers</h3>
          <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <div class="card devoured-card">
        <div class="card-image">
          <img src="/assets/img/eaten_burger.png">
          <h3>Munched-on Burgers</h3>
          <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <h2>Add a Burger</h2>
    <form class="create-form">
      <input type="text" id="addBurger" name="burger_name">
      <button class="btn yellow darken-2" type="submit" id="moreBurger">More Burger!</button>
  </div>
  </form>

</div>