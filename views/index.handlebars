<div class="container">
  <img src="/assets/img/burger.jpg" width="300px" class="img-center">

  <h2 style="text-align: center;">Eat-Da-Burger</h2>

<div class="row flex">
    <div class="col s12 m6">
      <div class="card lonely">
        <div class="card-image">
          <img src="https://placekitten.com/260/175">

          <h3>Lonely Burgers</h3>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <div class="card devoured">
        <div class="card-image">
          <img src="https://placekitten.com/260/175">
          <h3>Demolished Burgers</h3>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <form class="create-form">
    <div class="form-group">
      <label for="burger">Add a Burger:</label>
      <input type="text" id="burger" name="name">
      <button class="btn btn-primary" type="submit">More Burger!</button>
    </div>
  </form>

</div>